{
  "name": "strudel-dev-workspace",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "vite --config apps/dev/vite.config.mjs --host",
    "build": "npm run build:plugins && vite build --config apps/dev/vite.config.mjs",
    "build:plugins": "vite build --config packages/plugins/vite.config.mjs",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules packages/*/dist",
    "test": "npm run test:e2e",
    "test:e2e": "playwright test",
    "preview": "vite preview --config apps/dev/vite.config.mjs --host",
    "sampler": "npm run sampler --workspace strudel-sampler-microservice",
    "sampler:dev": "npm run dev --workspace strudel-sampler-microservice",
    "sampler:build": "npm run build --workspace strudel-sampler-microservice"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@strudel/codemirror": "file:vendor/strudel/packages/codemirror",
    "@strudel/core": "file:vendor/strudel/packages/core",
    "@strudel/csound": "file:vendor/strudel/packages/csound",
    "@strudel/draw": "file:vendor/strudel/packages/draw",
    "@strudel/gamepad": "file:vendor/strudel/packages/gamepad",
    "@strudel/hydra": "file:vendor/strudel/packages/hydra",
    "@strudel/midi": "file:vendor/strudel/packages/midi",
    "@strudel/mini": "file:vendor/strudel/packages/mini",
    "@strudel/mondo": "file:vendor/strudel/packages/mondo",
    "@strudel/motion": "file:vendor/strudel/packages/motion",
    "@strudel/mqtt": "file:vendor/strudel/packages/mqtt",
    "@strudel/osc": "file:vendor/strudel/packages/osc",
    "@strudel/repl": "file:vendor/strudel/packages/repl",
    "@strudel/sampler": "file:vendor/strudel/packages/sampler",
    "@strudel/serial": "file:vendor/strudel/packages/serial",
    "@strudel/soundfonts": "file:vendor/strudel/packages/soundfonts",
    "@strudel/superdough": "file:vendor/strudel/packages/superdough",
    "@strudel/supradough": "file:vendor/strudel/packages/supradough",
    "@strudel/tonal": "file:vendor/strudel/packages/tonal",
    "@strudel/transpiler": "file:vendor/strudel/packages/transpiler",
    "@strudel/web": "file:vendor/strudel/packages/web",
    "@strudel/webaudio": "file:vendor/strudel/packages/webaudio",
    "@strudel/xen": "file:vendor/strudel/packages/xen",
    "@types/node": "^24.10.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.4.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.0.2"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
