{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": { "@custom/plugins": ["./packages/plugins/src"] },
    "types": ["vite/client", "@types/node", "@playwright/test"]
  },
  "include": ["**/*.ts","**/*.tsx"],
  "exclude": ["node_modules","dist","apps/sampler"]
}
